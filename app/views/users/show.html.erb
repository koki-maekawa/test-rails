<div class="card w-full max-w-md mx-auto bg-white shadow-xl p-8">
  <h1 class="text-3xl font-bold text-center text-gray-700 mb-6">プロフィール</h1>
  <div class="space-y-4">
    <div class="form-control">
      <h3 class="text-lg font-semibold text-gray-600">ユーザー名</h3>
      <p class="text-gray-800 bg-gray-100 p-3 rounded-lg"><%= @user.name %></p>
    </div>
    <div class="form-control">
      <h3 class="text-lg font-semibold text-gray-600">メールアドレス</h3>
      <p class="text-gray-800 bg-gray-100 p-3 rounded-lg"><%= @user.email %></p>
    </div>
  </div>
  <div class="mt-6 text-center">
    <%= link_to "トップページ", root_path, class: "btn btn-primary w-full" %>
  </div>
</div>
