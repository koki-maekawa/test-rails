<div class="card w-full max-w-md mx-auto bg-white shadow-xl p-8">
  <h2 class="text-2xl font-semibold text-center text-gray-700"><%= t(".sign_up") %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-4" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="form-control">
      <%= f.label :name, class: "label font-medium text-gray-600" %>
      <%= f.text_field :name, autofocus: true, class: "input input-bordered w-full" %>
    </div>
    <div class="form-control">
      <%= f.label :email, class: "label font-medium text-gray-600" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full" %>
    </div>
    <div class="form-control">
      <%= f.label :password, class: "label font-medium text-gray-600" %>
      <% if @minimum_password_length %>
        <p class="text-sm text-gray-500">
          <%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %>
        </p>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>
    <div class="form-control">
      <%= f.label :password_confirmation, class: "label font-medium text-gray-600" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>
    <div class="form-control">
      <%= f.submit t(".sign_up"), class: "btn btn-primary w-full" %>
    </div>
  <% end %>
  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
