<div class="card w-full max-w-md mx-auto bg-white shadow-xl p-8">
  <h2 class="text-2xl font-semibold text-center text-gray-700"><%= t(".change_your_password") %></h2>
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-4"  }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>
    <div class="form-control">
      <%= f.label :password, t(".new_password"), class: "label font-medium text-gray-600" %>
      <% if @minimum_password_length %>
        <p><%= t("devise.shared.minimum_password_length", count: @minimum_password_length) %></p>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>
    <div class="form-control">
      <%= f.label :password_confirmation, t(".confirm_new_password"), class: "label font-medium text-gray-600" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full" %>
    </div>
    <div class="form-control">
      <%= f.submit t(".change_my_password"), class: "btn btn-primary w-full" %>
    </div>
  <% end %>
  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
